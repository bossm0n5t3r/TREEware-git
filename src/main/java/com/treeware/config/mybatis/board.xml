<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.treeware.admin.board.dao.AdminBoardDao">


	<insert id="addBoard" parameterType="BoardListDto">
	INSERT INTO BRD_LIST (bcode, bname, btype, ccode)
	VALUES(#{bcode}, #{bname}, #{btype}, #{ccode})
	</insert>
	
	<insert id="addCategory" parameterType="CategoryDto">
	INSERT INTO CATEGORY
	VALUES(#{ccode},#{cname})
	</insert>
	
	<select id="getBoardCount" resultType="int">
	SELECT COUNT(*)
	FROM BOARD_LIST
	</select>
	
</mapper>